datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Campaigns {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model Sessions {
  createdAt DateTime  @default(now())
  date      DateTime?
  id        String    @id @default(cuid())
  name      String?
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

model Maps {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  updatedAt DateTime @updatedAt
  url       String?
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Characters {
  classField String?
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  level      Int?
  race       String?
  stats      Json?
  updatedAt  DateTime @updatedAt
  user       User?    @relation(fields: [userId], references: [id])
  userId     String?
}

model User {
  campaignsItems  Campaigns[]
  charactersItems Characters[]
  createdAt       DateTime     @default(now())
  email           String?      @unique
  firstName       String?
  id              String       @id @default(cuid())
  lastName        String?
  mapsItems       Maps[]
  password        String
  role            String?
  roles           Json
  sessionsItems   Sessions[]
  updatedAt       DateTime     @updatedAt
  username        String       @unique
}

model Admin {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}
